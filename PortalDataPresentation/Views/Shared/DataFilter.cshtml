@model PortalDataPresentation.ViewModels.LineChartVM

<form asp-controller="@Model.Controller" asp-action="Index" method="get">
    <table>
        <tr>
            <td>
                <label>Data type: </label>
            </td>
            <td>
                <label>Date from: </label>
            </td>
            <td>
                <label>Date to: </label>
            </td>
        </tr>
        <tr>
            <td>
                <select id="dataTypeNameFilter" asp-for="DataTypeName" asp-items="Model.DataTypeNames" class="form-control"></select>
            </td>
            <td>
                <input id="minDateFilter" asp-for="MinDate" value="@Model.MinDate.ToString("yyyy-MM-dd")" asp-format="{0:yyyy-mm-dd}" type="date" class="form-control" />
            </td>
            <td>
                <input id="maxDateFilter" asp-for="MaxDate" value="@Model.MaxDate.ToString("yyyy-MM-dd")" asp-format="{0:yyyy-mm-dd}" type="date" class="form-control" />
            </td>
        </tr>
    </table>
    <br />
    <button class="btn btn-primary" type="submit">Filter</button>
</form>