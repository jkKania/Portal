        maxZoom: 18,
        id: 'mapbox/streets-v11',
        tileSize: 512,
        zoomOffset: -1,
        accessToken: 'pk.eyJ1IjoiamtrYW5pYSIsImEiOiJja2cyZXhweXIwMDR5MzZyMmRieW01N2ltIn0.4JsnwBfNnIlDHMbz7luUGQ'
    }).addTo(mymap);

